/**
 * 查询某条每日待办对应的打卡记录
 * @param {string | number} dailyTodoId 每日待办 ID
 * @param {Function} callback 回调函数，参数为 { success, data: { progress_count?, completion_target?, is_completed? }, message }
 * @description 调用 GET /checkin/:daily_todo_id，未打卡时 progress_count 为 0
 */
export function getCheckin(dailyTodoId: string | number, callback: (result: { success: boolean, data: { progress_count?: number | null, completion_target?: number | null, is_completed?: number | boolean | null }, message: string }) => void) {
	const requestUrl = `${BASE_URL}/checkin/${dailyTodoId}`
	const token = getAuthToken()
	uni.request({
		url: requestUrl,
		method: 'GET',
		timeout: 10000,
		header: {
			'Content-Type': 'application/json',
			'Authorization': token != '' ? `Bearer ${token}` : ''
		},
		success: (res: any) => {
			let ok = false
			let msg = '请求失败'
			const emptyData = { progress_count: 0, completion_target: null as number | null, is_completed: null as number | boolean | null }
			if (res != null && res.statusCode === 200) {
				ok = true
				const top = res.data as { message?: string, data?: { progress_count?: number | null, completion_target?: number | null, is_completed?: number | boolean | null } } | null
				if (top != null && top.message != null) msg = top.message.toString()
				const body = (top != null && top.data != null) ? top.data : (res.data as { progress_count?: number | null, completion_target?: number | null, is_completed?: number | boolean | null } | null)
				if (body != null) {
					callback({ success: true, data: { progress_count: body.progress_count != null ? body.progress_count : 0, completion_target: body.completion_target != null ? body.completion_target : null, is_completed: body.is_completed != null ? body.is_completed : null }, message: msg })
					return
				}
			} else if (res != null && res.statusCode === 401) {
				msg = '未授权，请重新登录'
			} else if (res != null && res.statusCode === 404) {
				msg = '待办不存在或已失效'
			} else if (res != null && res.statusCode != null) {
				msg = `请求失败，状态码 ${res.statusCode}`
			}
			callback({ success: ok, data: emptyData, message: msg })
		},
		fail: (err: any) => {
			console.error('getCheckin request fail:', err)
			callback({ success: false, data: { progress_count: 0, completion_target: null, is_completed: null }, message: '网络异常，请稍后重试' })
		}
	})
}

