export function updateCheckin(dailyTodoId: string | number, params: { is_completed: 0 | 1, checkin_remark?: string, progress_count?: number, progress_count_delta?: number, progress_duration_minutes?: number }, callback: (result: { success: boolean, message: string }) => void) {
