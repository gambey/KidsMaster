			loadTaskSettings() {
				// ä»APIè·å–ä»Šæ—¥å·²é€‰ä¸­çš„äº‹é¡¹
				const today = new Date()
				const todoDate = this.formatDateKey(today.getFullYear(), today.getMonth() + 1, today.getDate())
				const childId = this.settingsRole === 'child' ? this.getCurrentChildId() : null
				
