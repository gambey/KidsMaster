		},
		onLoad(options : OnLoadOptions) {
			// ÂÖà‰ªéÊú¨Âú∞Â≠òÂÇ®ËØªÂèñÊ∏∏ÊàèÊ®°Âºè
			try {
				const savedMode = uni.getStorageSync('schulteGameMode')
