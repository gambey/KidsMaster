	</view>
</template>

<script lang="uts">
	import { getCheckin, updateCheckin } from '../../../utils/api.uts'

	export default {
		data() {
			return {
				bpm: 120,
				isPlaying: false,
				isBeat: false,
				metronomeTimer: 0,
				beatTimer: 0,
				bpmPresets: [60, 80, 100, 120, 140, 160],
				fromTask: false,
				todoId: '',
				childId: '',
				progressCount: 0,
				jumpRopeTarget: 100
			}
		},
		onLoad(options: any) {
			// ‰ªé‰∫ãÈ°πËøõÂÖ•ÔºàË∑≥Áª≥ÊâìÂç°ÔºâÔºöËß£Êûê from„ÄÅtodoId„ÄÅidÔºåÊãâÂèñÊâìÂç°ËøõÂ∫¶
			if (options != null && options.from === 'task' && options.todoId != null && options.todoId !== '') {
				this.fromTask = true
				this.todoId = options.todoId.toString()
				if (options.id != null) this.childId = options.id.toString()
				getCheckin(this.todoId, (res) => {
					if (res.success && res.data != null) {
						this.progressCount = res.data.progress_count != null ? res.data.progress_count : 0
						// Ë∑≥Áª≥ÁõÆÊ†áÊï∞‰∏éÊúçÂä°Á´Ø‰∏ÄËá¥ÔºöÊúâ completion_target ÂàôÁî®ÊúçÂä°Á´ØÂÄºÔºàÂê´ 0ÔºâÔºåÂê¶Âàô‰øùÊåÅÈªòËÆ§ 100
						if (res.data.completion_target != null && typeof res.data.completion_target === 'number') {
							this.jumpRopeTarget = res.data.completion_target >= 0 ? res.data.completion_target : 100
						}
					}
				})
			}
			// ‰ªéÊú¨Âú∞Â≠òÂÇ®ËØªÂèñ‰øùÂ≠òÁöÑBPM
			try {
				const savedBpm = uni.getStorageSync('metronomeBpm')
				if (savedBpm != null && savedBpm != "") {
					const bpmValue = parseInt(savedBpm.toString())
					if (!isNaN(bpmValue) && bpmValue >= 40 && bpmValue <= 200) {
						this.bpm = bpmValue
					}
				}
			} catch (e) {
				// ÂøΩÁï•ÈîôËØØ
			}
		},
		onHide() {
			this.stopMetronome()
		},
		onUnload() {
			this.stopMetronome()
		},
		methods: {
			increaseBpm() {
				if (this.bpm < 200) {
					this.bpm++
					this.saveBpm()
					if (this.isPlaying) {
						this.restartMetronome()
					}
				}
			},
			decreaseBpm() {
				if (this.bpm > 40) {
					this.bpm--
					this.saveBpm()
					if (this.isPlaying) {
						this.restartMetronome()
					}
				}
			},
			setBpm(value: number) {
				this.bpm = value
				this.saveBpm()
				if (this.isPlaying) {
					this.restartMetronome()
				}
			},
			saveBpm() {
				try {
					uni.setStorageSync('metronomeBpm', this.bpm)
				} catch (e) {
					// ÂøΩÁï•ÈîôËØØ
				}
			},
			toggleMetronome() {
				if (this.isPlaying) {
					this.stopMetronome()
				} else {
					this.startMetronome()
				}
			},
			startMetronome() {
				this.isPlaying = true
				const interval = Math.floor(60000 / this.bpm) // ÊØèÂàÜÈíüÁöÑÊØ´ÁßíÊï∞Èô§‰ª•BPM
				
				// Á´ãÂç≥Êí≠ÊîæÁ¨¨‰∏ÄÊãç
				this.playBeat()
				
				// ËÆæÁΩÆÂÆöÊó∂Âô®
				this.metronomeTimer = setInterval(() => {
					this.playBeat()
				}, interval) as number
			},
			stopMetronome() {
				this.isPlaying = false
				if (this.metronomeTimer != 0) {
					clearInterval(this.metronomeTimer)
					this.metronomeTimer = 0
				}
				if (this.beatTimer != 0) {
					clearTimeout(this.beatTimer)
					this.beatTimer = 0
				}
				this.isBeat = false
			},
			restartMetronome() {
				this.stopMetronome()
				this.startMetronome()
			},
			playBeat() {
				// ËßÜËßâÂèçÈ¶à
				this.isBeat = true
				this.beatTimer = setTimeout(() => {
					this.isBeat = false
				}, 100) as number
				
				// ÊåØÂä®ÂèçÈ¶àÔºàÊüê‰∫õÂπ≥Âè∞ÂèØËÉΩ‰∏çÊîØÊåÅÔºâ
				// #ifdef APP-PLUS
				try {
					uni.vibrateShort({
						type: 'light'
					})
				} catch (e) {
					// ÂøΩÁï•ÊåØÂä®Â§±Ë¥•
				}
				// #endif
			},
			goBack() {
				this.stopMetronome()
				uni.navigateBack()
			},
			increaseJumpTarget() {
				if (this.jumpRopeTarget < 9999) {
					this.jumpRopeTarget++
				}
			},
			decreaseJumpTarget() {
				if (this.jumpRopeTarget > 1) {
					this.jumpRopeTarget--
				}
			},
			achieveGoal() {
				if (this.todoId === '') return
				updateCheckin(this.todoId, { is_completed: 1, progress_count_delta: this.jumpRopeTarget }, (res) => {
					if (res.success) {
						this.progressCount = this.progressCount + this.jumpRopeTarget
						uni.showToast({ title: 'ÊâìÂç°ÊàêÂäüÔºÅ', icon: 'success' })
						uni.navigateBack()
					} else {
						uni.showToast({ title: res.message != null ? res.message : 'ÊâìÂç°Â§±Ë¥•', icon: 'none' })
					}
				})
			}
		}
	}
</script>

