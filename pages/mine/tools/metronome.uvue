<template>
	<view class="container">
		<view class="header">
			<view class="back-button" @click="goBack">
				<text class="back-icon">‚Üê</text>
			</view>
			<text class="title">üéµ ËäÇÊãçÂô®</text>
		</view>
		
		<view class="content">
			<view class="bpm-display">
				<text class="bpm-label">BPM</text>
				<text class="bpm-value">{{ bpm }}</text>
			</view>
			
			<view class="control-panel">
				<view class="bpm-control">
					<view class="bpm-button" @click="decreaseBpm">
						<text class="bpm-button-text">‚àí</text>
					</view>
					<view class="bpm-input-wrapper">
						<text class="bpm-display-text">{{ bpm }}</text>
					</view>
					<view class="bpm-button" @click="increaseBpm">
						<text class="bpm-button-text">+</text>
					</view>
				</view>
				
				<view class="preset-buttons">
					<view 
						class="preset-button" 
						v-for="preset in bpmPresets" 
						:key="preset"
						@click="setBpm(preset)"
					>
						<text class="preset-text">{{ preset }}</text>
					</view>
				</view>
			</view>
			
			<view class="play-button-wrapper">
				<view class="play-button" @click="toggleMetronome">
					<text class="play-icon">{{ isPlaying ? '‚è∏Ô∏è' : '‚ñ∂Ô∏è' }}</text>
				</view>
			</view>
			
			<view class="beat-indicator" v-if="isPlaying">
				<view class="beat-circle" :class="{ 'beat-active': isBeat }"></view>
			</view>
		</view>
	</view>
</template>

<script lang="uts">
	export default {
		data() {
			return {
				bpm: 120,
				isPlaying: false,
				isBeat: false,
				metronomeTimer: 0,
				beatTimer: 0,
				bpmPresets: [60, 80, 100, 120, 140, 160]
			}
		},
		onLoad() {
			// ‰ªéÊú¨Âú∞Â≠òÂÇ®ËØªÂèñ‰øùÂ≠òÁöÑBPM
			try {
				const savedBpm = uni.getStorageSync('metronomeBpm')
				if (savedBpm != null && savedBpm != "") {
					const bpmValue = parseInt(savedBpm.toString())
					if (!isNaN(bpmValue) && bpmValue >= 40 && bpmValue <= 200) {
						this.bpm = bpmValue
					}
				}
			} catch (e) {
				// ÂøΩÁï•ÈîôËØØ
			}
		},
		onHide() {
			this.stopMetronome()
		},
		onUnload() {
			this.stopMetronome()
		},
		methods: {
			increaseBpm() {
				if (this.bpm < 200) {
					this.bpm++
					this.saveBpm()
					if (this.isPlaying) {
						this.restartMetronome()
					}
				}
			},
			decreaseBpm() {
				if (this.bpm > 40) {
					this.bpm--
					this.saveBpm()
					if (this.isPlaying) {
						this.restartMetronome()
					}
				}
			},
			setBpm(value: number) {
				this.bpm = value
				this.saveBpm()
				if (this.isPlaying) {
					this.restartMetronome()
				}
			},
			saveBpm() {
				try {
					uni.setStorageSync('metronomeBpm', this.bpm)
				} catch (e) {
					// ÂøΩÁï•ÈîôËØØ
				}
			},
			toggleMetronome() {
				if (this.isPlaying) {
					this.stopMetronome()
				} else {
					this.startMetronome()
				}
			},
			startMetronome() {
				this.isPlaying = true
				const interval = Math.floor(60000 / this.bpm) // ÊØèÂàÜÈíüÁöÑÊØ´ÁßíÊï∞Èô§‰ª•BPM
				
				// Á´ãÂç≥Êí≠ÊîæÁ¨¨‰∏ÄÊãç
				this.playBeat()
				
				// ËÆæÁΩÆÂÆöÊó∂Âô®
				this.metronomeTimer = setInterval(() => {
					this.playBeat()
				}, interval) as number
			},
			stopMetronome() {
				this.isPlaying = false
				if (this.metronomeTimer != 0) {
					clearInterval(this.metronomeTimer)
					this.metronomeTimer = 0
				}
				if (this.beatTimer != 0) {
					clearTimeout(this.beatTimer)
					this.beatTimer = 0
				}
				this.isBeat = false
			},
			restartMetronome() {
				this.stopMetronome()
				this.startMetronome()
			},
			playBeat() {
				// ËßÜËßâÂèçÈ¶à
				this.isBeat = true
				this.beatTimer = setTimeout(() => {
					this.isBeat = false
				}, 100) as number
				
				// ÊåØÂä®ÂèçÈ¶àÔºàÊüê‰∫õÂπ≥Âè∞ÂèØËÉΩ‰∏çÊîØÊåÅÔºâ
				// #ifdef APP-PLUS
				try {
					uni.vibrateShort({
						type: 'light'
					})
				} catch (e) {
					// ÂøΩÁï•ÊåØÂä®Â§±Ë¥•
				}
				// #endif
			},
			goBack() {
				this.stopMetronome()
				uni.navigateBack()
			}
		}
	}
</script>

