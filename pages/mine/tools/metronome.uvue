<template>
	<view class="container">
		<view class="header">
			<view class="back-button" @click="goBack">
				<text class="back-icon">‚Üê</text>
			</view>
			<text class="title">üéµ ËäÇÊãçÂô®</text>
		</view>
		
		<scroll-view class="content-scroll" scroll-y="true">
		<view class="content">
			<!-- ‰ªé‰∫ãÈ°πËøõÂÖ•ÔºàË∑≥Áª≥ÊâìÂç°ÔºâÔºö‰ªäÊó•Â∑≤ËææÊàê x Ê¨° + ÁõÆÊ†áÊï∞ + ËææÊàêÁõÆÊ†á -->
			<view v-if="fromTask" class="jump-rope-section">
				<text class="jump-rope-label">‰ªäÊó•Â∑≤ËææÊàê {{ progressCount }} Ê¨°</text>
				<view class="jump-rope-target-row">
					<text class="jump-rope-target-label">Ë∑≥Áª≥ÁõÆÊ†áÊï∞</text>
					<view class="jump-rope-stepper">
						<view class="jump-rope-step-btn" @click="decreaseJumpTarget">
							<text class="jump-rope-step-text">‚àí</text>
						</view>
						<text class="jump-rope-target-value">{{ jumpRopeTarget }}</text>
						<view class="jump-rope-step-btn" @click="increaseJumpTarget">
							<text class="jump-rope-step-text">+</text>
						</view>
					</view>
				</view>
				<view class="achieve-goal-btn" @click="achieveGoal">
					<text class="achieve-goal-text">ËææÊàêÁõÆÊ†á</text>
				</view>
			</view>
			<view class="bpm-display">
				<text class="bpm-label">BPM</text>
				<text class="bpm-value">{{ bpm }}</text>
			</view>
			
			<view class="control-panel">
				<view class="bpm-control">
					<view class="bpm-button" @click="decreaseBpm">
						<text class="bpm-button-text">‚àí</text>
					</view>
					<view class="bpm-input-wrapper">
						<text class="bpm-display-text">{{ bpm }}</text>
					</view>
					<view class="bpm-button" @click="increaseBpm">
						<text class="bpm-button-text">+</text>
					</view>
				</view>
				
				<view class="preset-buttons">
					<view 
						class="preset-button" 
						v-for="preset in bpmPresets" 
						:key="preset"
						@click="setBpm(preset)"
					>
						<text class="preset-text">{{ preset }}</text>
					</view>
				</view>
			</view>
			
			<view class="play-button-wrapper">
				<view class="play-button" @click="toggleMetronome">
					<text class="play-icon">{{ isPlaying ? '‚è∏Ô∏è' : '‚ñ∂Ô∏è' }}</text>
				</view>
			</view>
			
			<view class="beat-indicator" v-if="isPlaying">
				<view class="beat-circle" :class="{ 'beat-active': isBeat }"></view>
			</view>
