				genderIndex: 0,
				genderOptions: ['ç”·', 'å¥³'],
				age: '',
				grade: ''
			}
		},
		onLoad(options: any) {
			if (options != null && options.id != null) {
				this.childId = options.id.toString()
				this.loadChildInfo()
			}
		},
		methods: {
			goBack() {
