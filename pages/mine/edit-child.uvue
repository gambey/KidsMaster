			</view>
			
			<view class="form-section">
				<view class="form-item">
					<text class="form-label">å°å</text>
					<input class="form-input" v-model="nickname" placeholder="è¯·è¾“å…¥å°å" />
				</view>
				
				<view class="form-item">
					<text class="form-label">æ€§åˆ«</text>
					<picker mode="selector" :range="genderOptions" :value="genderIndex" @change="onGenderChange">
						<view class="picker-view">
							<text class="picker-text">{{ genderOptions[genderIndex] }}</text>
							<text class="picker-arrow">â–¼</text>
						</view>
					</picker>
				</view>
				
				<view class="form-item">
					<text class="form-label">å¹´é¾„</text>
					<input class="form-input" type="number" v-model="age" placeholder="è¯·è¾“å…¥å¹´é¾„" />
				</view>
				
				<view class="form-item">
					<text class="form-label">å¹´çº§</text>
					<input class="form-input" v-model="grade" placeholder="è¯·è¾“å…¥å¹´çº§" />
				</view>
			</view>
			
			<view class="confirm-button" @click="handleConfirm">
				<text class="confirm-button-text">ç¡®è®¤</text>
			</view>
		</view>
	</view>
