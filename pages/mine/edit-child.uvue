<script lang="uts">
	type ChildInfo = {
		id: string
		nickname: string
		gender: string
		age: number
		grade: string
		avatar?: string
	}
	
	export default {
		data() {
			return {
				childId: '',
				avatarUrl: '',
				nickname: '',
				gender: 'ç”·',
				genderIndex: 0,
				genderOptions: ['ç”·', 'å¥³'],
				age: '',
				grade: ''
			}
		},
		onLoad(options: any) {
			if (options != null && options.id != null) {
				this.childId = options.id.toString()
				this.loadChildInfo()
			}
		},
		methods: {
			goBack() {
				uni.navigateBack()
			},
			loadChildInfo() {
				try {
					const stored = uni.getStorageSync('childrenList')
					if (stored != null && stored != '') {
						const parsed = JSON.parse(stored.toString())
						if (Array.isArray(parsed)) {
							const childrenList = parsed as ChildInfo[]
							for (let i = 0; i < childrenList.length; i++) {
								if (childrenList[i].id === this.childId) {
									const child = childrenList[i]
									this.nickname = child.nickname
									this.gender = child.gender
									this.age = child.age.toString()
									this.grade = child.grade
									this.avatarUrl = child.avatar != null ? child.avatar : ''
									
									// è®¾ç½®æ€§åˆ«ç´¢å¼•
									for (let j = 0; j < this.genderOptions.length; j++) {
										if (this.genderOptions[j] === this.gender) {
											this.genderIndex = j
											break
										}
									}
									break
								}
							}
						}
					}
				} catch (e) {
					console.error('åŠ è½½å­å¥³ä¿¡æ¯å¤±è´¥:', e)
				}
			},
			chooseAvatar() {
				uni.chooseImage({
					count: 1,
					sizeType: ['compressed'],
					sourceType: ['album', 'camera'],
					success: (res: any) => {
						if (res.tempFilePaths != null && res.tempFilePaths.length > 0) {
							this.avatarUrl = res.tempFilePaths[0].toString()
						}
					},
					fail: (err: any) => {
						console.error('é€‰æ‹©å¤´åƒå¤±è´¥:', err)
					}
				})
			},
			onGenderChange(e: any) {
				const index = e.detail != null && e.detail.value != null ? Number(e.detail.value) : 0
				this.genderIndex = index
				this.gender = this.genderOptions[index]
			},
			handleDelete() {
				uni.showModal({
					title: 'æç¤º',
					content: 'ç¡®å®šè¦åˆ é™¤è¿™ä¸ªå­å¥³å—ï¼Ÿ',
					success: (res: any) => {
						if (res.confirm) {
							this.deleteChild()
						}
					}
				})
			},
			deleteChild() {
				try {
					const stored = uni.getStorageSync('childrenList')
					if (stored != null && stored != '') {
						const parsed = JSON.parse(stored.toString())
						if (Array.isArray(parsed)) {
							let childrenList = parsed as ChildInfo[]
							// è¿‡æ»¤æ‰è¦åˆ é™¤çš„å­å¥³
							const newList: ChildInfo[] = []
							for (let i = 0; i < childrenList.length; i++) {
								if (childrenList[i].id !== this.childId) {
									newList.push(childrenList[i])
								}
							}
							
							// ä¿å­˜æ›´æ–°åçš„åˆ—è¡¨
							uni.setStorageSync('childrenList', JSON.stringify(newList))
							
							// å¦‚æœåˆ é™¤çš„æ˜¯å½“å‰é€‰ä¸­çš„å­å¥³ï¼Œéœ€è¦æ›´æ–°
							const currentChildId = uni.getStorageSync('currentChildId')
							if (currentChildId != null && currentChildId.toString() === this.childId) {
								if (newList.length > 0) {
									uni.setStorageSync('currentChildId', newList[0].id)
								} else {
									uni.removeStorageSync('currentChildId')
								}
							}
							
							uni.showToast({
								title: 'åˆ é™¤æˆåŠŸ',
								icon: 'success'
							})
							
							setTimeout(() => {
								uni.navigateBack()
							}, 1500)
						}
					}
				} catch (e) {
					console.error('åˆ é™¤å­å¥³å¤±è´¥:', e)
					uni.showToast({
						title: 'åˆ é™¤å¤±è´¥ï¼Œè¯·é‡è¯•',
						icon: 'none'
					})
				}
			},
			handleConfirm() {
				const name = this.nickname.trim()
				const ageStr = this.age.toString().trim()
				const gradeStr = this.grade.trim()
				
				if (name === '') {
					uni.showToast({
						title: 'è¯·è¾“å…¥å°å',
						icon: 'none'
					})
					return
				}
				
				if (ageStr === '' || Number(ageStr) <= 0) {
					uni.showToast({
						title: 'è¯·è¾“å…¥æœ‰æ•ˆå¹´é¾„',
						icon: 'none'
					})
					return
				}
				
				if (gradeStr === '') {
					uni.showToast({
						title: 'è¯·è¾“å…¥å¹´çº§',
						icon: 'none'
					})
					return
				}
				
				try {
					const stored = uni.getStorageSync('childrenList')
					if (stored != null && stored != '') {
						const parsed = JSON.parse(stored.toString())
						if (Array.isArray(parsed)) {
							const childrenList = parsed as ChildInfo[]
							// æ›´æ–°å­å¥³ä¿¡æ¯
							for (let i = 0; i < childrenList.length; i++) {
								if (childrenList[i].id === this.childId) {
									childrenList[i].nickname = name
									childrenList[i].gender = this.gender
									childrenList[i].age = Number(ageStr)
									childrenList[i].grade = gradeStr
									if (this.avatarUrl != '') {
										childrenList[i].avatar = this.avatarUrl
									}
									break
								}
							}
							
							// ä¿å­˜æ›´æ–°åçš„åˆ—è¡¨
							uni.setStorageSync('childrenList', JSON.stringify(childrenList))
							
							uni.showToast({
								title: 'ä¿å­˜æˆåŠŸ',
								icon: 'success'
							})
							
							setTimeout(() => {
								uni.navigateBack()
							}, 1500)
						}
					}
				} catch (e) {
					console.error('ä¿å­˜å­å¥³ä¿¡æ¯å¤±è´¥:', e)
					uni.showToast({
						title: 'ä¿å­˜å¤±è´¥ï¼Œè¯·é‡è¯•',
						icon: 'none'
					})
				}
			}
		}
	}
</script>

