			loadChildInfo() {
				try {
					const stored = uni.getStorageSync('childrenList')
					if (stored != null && stored != '') {
						const parsed = JSON.parse(stored.toString())
						if (Array.isArray(parsed)) {
							const childrenList = parsed as ChildInfo[]
							for (let i = 0; i < childrenList.length; i++) {
								if (childrenList[i].id?.toString() === this.childId) {
									const child = childrenList[i]
									this.child_name = child.child_name
									this.gender = child.gender
									this.age = child.age.toString()
									this.grade = child.grade_name
									this.avatarUrl = child.avatar != null ? child.avatar : ''
									
									// è®¾ç½®æ€§åˆ«ç´¢å¼•
									this.genderIndex = child.gender
									break
								}
							}
						}
					}
				} catch (e) {
					console.error('åŠ è½½å­å¥³ä¿¡æ¯å¤±è´¥:', e)
				}
			},
			chooseAvatar() {
				uni.chooseImage({
					count: 1,
					sizeType: ['compressed'],
					sourceType: ['album', 'camera'],
					success: (res: any) => {
						if (res.tempFilePaths != null && res.tempFilePaths.length > 0) {
							this.avatarUrl = res.tempFilePaths[0].toString()
						}
					},
					fail: (err: any) => {
						console.error('é€‰æ‹©å¤´åƒå¤±è´¥:', err)
