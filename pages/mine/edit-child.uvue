									// è¿‡æ»¤æ‰è¦åˆ é™¤çš„å­å¥³
									const newList: ChildInfo[] = []
									for (let i = 0; i < childrenList.length; i++) {
										if (childrenList[i].id != null && childrenList[i].id !== this.childId) {
